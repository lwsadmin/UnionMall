@using System.Globalization
@using Abp.Web.Security.AntiForgery

@using UnionMall.Web.Views.Shared.Components.TopBar
@using Abp.Web.Security.AntiForgery
@using UnionMall.Web.Views.Shared.Components.SideBarNav
@inject IAbpAntiForgeryManager AbpAntiForgeryManager
@inject UnionMall.Timing.AppTimes AppTimes
@{
    AbpAntiForgeryManager.SetCookie(Context);
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    @*<link rel="shortcut icon" href="/favicon.ico">*@
    <title>@L("UnionMall")</title>
    <link href="/lib/admin/css/bootstrap.min.css" asp-append-version="true" rel="stylesheet">
    <link href="/lib/admin/font-awesome/css/font-awesome.css" rel="stylesheet" asp-append-version="true" />
    <link href="/lib/admin/css/plugins/toastr/toastr.min.css" rel="stylesheet" asp-append-version="true">
    @*<link href="http://cn.inspinia.cn/html/inspiniaen/css/animate.css" rel="stylesheet" asp-append-version="true">*@
    <link href="/lib/admin/css/style.css" rel="stylesheet" asp-append-version="true">
    <script src="/lib/admin/js/jquery-3.1.1.min.js" asp-append-version="true"></script>
    <link href="~/css/kefu.css" rel="stylesheet" asp-append-version="true" />
    <style>
        .spiner-example {
            top: 45%;
            position: fixed;
            z-index: 1;
            width: 100vw;
        }

        *::-webkit-scrollbar-track {
            -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.1);
            background-color: #F5F5F5;
            border-radius: 10px;
        }

        *::-webkit-scrollbar {
            width: 5px;
            background-color: #F5F5F5;
        }

        *::-webkit-scrollbar-thumb {
            border-radius: 10px;
            background-color: #FFF;
            background-image: -webkit-gradient(linear, 40% 0%, 75% 84%, from(#4D9C41), to(#19911D), color-stop(.6,#54DE5D))
        }
    </style>
</head>
<body>

    <div class="spiner-example" id="loading">
        <div class="sk-spinner sk-spinner-circle">
            <div class="sk-circle1 sk-circle"></div>
            <div class="sk-circle2 sk-circle"></div>
            <div class="sk-circle3 sk-circle"></div>
            <div class="sk-circle4 sk-circle"></div>
            <div class="sk-circle5 sk-circle"></div>
            <div class="sk-circle6 sk-circle"></div>
            <div class="sk-circle7 sk-circle"></div>
            <div class="sk-circle8 sk-circle"></div>
            <div class="sk-circle9 sk-circle"></div>
            <div class="sk-circle10 sk-circle"></div>
            <div class="sk-circle11 sk-circle"></div>
            <div class="sk-circle12 sk-circle"></div>
        </div>
        <p style="text-align:center;">@L("Loading")</p>
    </div>
    <div id="wrapper">


        @await Component.InvokeAsync(typeof(SideBarNavViewComponent), new { FirstMenu = ViewBag.FirstMenu, SecondMenu = ViewBag.SecondMenu })
        <div id="page-wrapper" class="gray-bg dashbard-1">
            @await Component.InvokeAsync(typeof(TopBarViewComponent))

            @RenderBody()
        </div>
    </div>
    <div class="scrollsidebar">
        <div class="side_content">
            <div class="side_list">
                <div class="side_title"><a title="隐藏" id="close_btn" class="close_btn"><span>关闭</span></a></div>
                <div class="side_center">
                    <div class="custom_service">
                        <p>
                            <a title="点击这里给我发消息" href="http://wpa.qq.com/msgrd?v=3&uin=919683350&site=CSDN&menu=yes" target="_blank">
                                <img src="http://wpa.qq.com/pa?p=2:919683350:41">
                            </a>
                        </p>
                    </div>
                    <div class="other">
                        <p><img src="/img/qrcode.png" width="120" /></p>
                        <p style="margin-top:0;">微信扫码 联系研发</p>
                    </div>
                    <br />
                    <div class="msgserver">
                        <p><a href="http://wpa.qq.com/msgrd?v=3&uin=919683350&site=CSDN&menu=yes" target="_blank">联系技术研发</a></p>
                    </div>
                </div>
                <div class="side_bottom"></div>
            </div>
        </div>
        <div class="show_btn" id="show_btn"><span>在线咨询</span></div>
    </div>

    <!-- Mainly scripts -->
    <script src="/lib/admin/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="/lib/admin/js/plugins/toastr/toastr.min.js" asp-append-version="true"></script>

    <script src="/lib/admin/js/inspinia.js" asp-append-version="true"></script>
    <script src="/lib/admin/js/plugins/metisMenu/jquery.metisMenu.js" asp-append-version="true"></script>
    <script src="/lib/admin/js/plugins/slimscroll/jquery.slimscroll.min.js" asp-append-version="true"></script>


    <script src="~/lib/abp-web-resources/Abp/Framework/scripts/abp.js" asp-append-version="true"></script>
    <script src="~/lib/abp-web-resources/Abp/Framework/scripts/libs/abp.jquery.js" asp-append-version="true"></script>
    <script src="~/js/main.js" asp-append-version="true"></script>

    <script>
        $(".pagination").next(".col-md-2").find("button").css("border-radius", "0");
        $("#loading").fadeOut(300);
        $("#close_btn").click(function ()
        {
            $(".side_content").css("width", "0px");
            $("#show_btn").css("width", "25px");
        });
        $("#show_btn").click(function ()
        {
            $(".side_content").css("width", "154px");
            $("#show_btn").css("width", "0px");
        });
    </script>
    @*<script src="/api/abpServiceProxies/Get?name=tasksystem/task" type="text/javascript"></script>*@
    <script src="~/AbpServiceProxies/GetAll?v=1" type="text/javascript" asp-append-version="true"></script>
    @*<script src="~/AbpScripts/GetScripts?v=@(AppTimes.StartupTime.Ticks)" type="text/javascript" asp-append-version="true"></script>*@

</body>
</html>

