
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.FirstMenu = "Member";
    ViewBag.SecondMenu = "MemberRegister";


}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2></h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">@L("HomePage")</a>
            </li>
            <li>
                <a>@L("Member")</a>
            </li>
            <li class="active">
                <strong>@L("Register")</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">


            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@L("Register")</h5>

                </div>
                <div class="ibox-content">
                    <form class="form-horizontal">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">@L("FullName")</label>
                            <div class="col-lg-4">
                                <input type="text" placeholder="" class="form-control input-sm" required minlength="2"  />
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">@L("PhoneNumber")</label>

                            <div class="col-lg-4"><input type="number" placeholder="" minlength="7" maxlength="11"  class="form-control"></div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button class="btn btn-sm btn-white" type="submit">登录</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>