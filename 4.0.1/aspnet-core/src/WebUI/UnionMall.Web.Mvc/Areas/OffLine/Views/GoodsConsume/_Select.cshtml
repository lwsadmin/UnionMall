
@{
    Layout = null;
}
@using System.Data
@model DataTable
<div class="modal inmodal fade in" id="Select" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">---</h4>
                <small class="font-bold"></small>
            </div>

            <div class="modal-body">

                    <div class="ibox-content">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>@L("GoodsSpec")</th>
                                    <th>@L("Stock")</th>
                                    <th>@L("Buy")@L("Count")</th>
                                    <th>@L("Price")</th>
                                    <th>@L("Select")</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow item in Model.Rows)
                                {
                                    <tr>
                                        <td class="title">
                                            @item["Text"]
                                        </td>
                                        <td>@item["Stock"]</td>
                                        <td><input type="number" class="form-control input-sm" max="@item["Stock"]" name="buy-count" value="1" /> </td>
                                        <td>@item["Price"]</td>
                                        <td onclick="">
                                            <a href="javascript:void(0);" title="@L("Add")">
                                                <i class="fa fa-check text-navy"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
            </div>
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">@L("Save")</button>
                &nbsp;&nbsp;
                <button type="button" class="btn btn-white" data-dismiss="modal">@L("Cancel")</button>
            </div>

        </div>
    </div>
</div>
