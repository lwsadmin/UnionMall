
@{
    ViewData["Title"] = "_Add";
    Layout = null;
    SelectList list = ViewData["Category"] as SelectList;
}
@using System.Data

<div class="modal inmodal fade in" id="Modal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">×</span><span class="sr-only">Close</span></button>
                <h5 id="headTitle" class="modal-title"></h5>
            </div>
            <div class="modal-body">

                <div class="ibox float-e-margins">
                    <div class="ibox-content">
                        <form method="post" id="AddPost" class="form-horizontal">
                            <input type="hidden" name="Id" value="0" />
                            <div class="form-group">
                                <label class="col-sm-2 control-label">@L("Name")</label>
                                <div class="col-sm-9"><input type="text" name="Name" value="" class="form-control" required maxlength="10"></div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">@L("GoodsCategory")</label>
                                <div class="col-sm-9">
                                    @Html.DropDownList("CategoryId", (SelectList)ViewData["Category"], L("Choose"), new { @class = "form-control chosen-select" })
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">@L("Type")</label>
                                <div class="col-sm-9">
                                    <select class="form-control" name="DataType" id="DataType">
                                        <option value="Textbox">@L("Textbox")</option>
                                        <option value="Radio">@L("Radio")</option>
                                        <option value="Checkbox">@L("Checkbox")</option>
                                        <option value="TextArea">@L("TextArea")</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">@L("Default")</label>
                                <div class="col-sm-9">
                                    <input type="text" name="DefaultValue" value="" class="form-control" required maxlength="10">
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <label class="col-sm-2 control-label">@L("Selectable")</label>
                                <div class="col-sm-9">
                                    <textarea name="Options" id="Options" class="form-control" cols="5"></textarea>
                                    <span class="help-block m-b-none">@L("OptionTip")</span>
                                </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                                <button id="Save" type="submit" class="btn btn-primary">提交保存</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>


        </div>
    </div>
</div>
