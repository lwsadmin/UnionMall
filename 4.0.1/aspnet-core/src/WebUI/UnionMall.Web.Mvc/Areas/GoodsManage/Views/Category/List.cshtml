
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.FirstMenu = "OnlineGoods";
    ViewBag.SecondMenu = "GoodsCategory";
}
@using System.Data
@using X.PagedList
@model PagedList<DataRow>

<link href="~/lib/treetable/jquery.treetable.css" rel="stylesheet" />
<link href="~/lib/treetable/jquery.treetable.theme.default.css" rel="stylesheet" />
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2></h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">@L("HomePage")</a>
            </li>
            <li>
                <a>@L("OnlineGoods")</a>
            </li>
            <li class="active">
                <strong>@L("GoodsCategory")</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-title">
                    <h5>@L("GoodsCategory")</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                        <ul class="dropdown-menu dropdown-user">
                            <li>
                                <a data-ajax="true" data-ajax-form="searchForm"
                                   data-ajax-loading="loading" data-ajax-loading-duration="2"
                                   data-ajax-method="GET" data-ajax-mode="Replace" data-ajax-update="#table"
                                   href="/GoodsManage/Category/Table?page=1&pageSize=10">10</a>
                            </li>
                            <li>
                                <a data-ajax="true" data-ajax-form="searchForm"
                                   data-ajax-loading="loading" data-ajax-loading-duration="2"
                                   data-ajax-method="GET" data-ajax-mode="Replace" data-ajax-update="#table"
                                   href="/GoodsManage/Category/Table?page=1&pageSize=15">15</a>
                            </li>
                            <li>
                                <a data-ajax="true" data-ajax-form="searchForm"
                                   data-ajax-loading="loading" data-ajax-loading-duration="2"
                                   data-ajax-method="GET" data-ajax-mode="Replace" data-ajax-update="#table"
                                   href="/GoodsManage/Category/Table?page=1&pageSize=20">20</a>
                            </li>
                        </ul>
                        <a class="close-link">

                            <i class="fa fa-times"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <button id="add" class="btn btn-primary btn-sm m-b" type="button"><i class="fa fa-plus"></i>&nbsp;新增</button>
                    @*<input type="text" class="form-control input-sm m-b-xs" id="filter" placeholder="搜索表">*@
                    <div id="table">
                        @Html.Partial("_Table", Model)
                    </div>
           

                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/lib/pager/jquery.unobtrusive-ajax.js"></script>
<script src="~/lib/treetable/jquery.treetable.js"></script>


