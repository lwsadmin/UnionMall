
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.FirstMenu = "SystemSet";
    ViewBag.SecondMenu = "ManagerRole";
}
@using System.Data
@using X.PagedList
@model PagedList<DataRow>

<script src="~/view-resources/Views/Roles/Index.js"></script>
<script src="~/js/jquery.unobtrusive.js"></script>
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-12">
        <h2></h2>
        <ol class="breadcrumb">
            <li>
                <a href="/">@L("HomePage")</a>
            </li>
            <li>
                <a>@L("SystemSet")</a>
            </li>
            <li class="active">
                <strong>@L("Roles")@L("List")</strong>
            </li>
        </ol>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <button id="add" class="btn btn-primary btn-sm" type="button"><i class="fa fa-plus"></i>&nbsp;新增</button>
                </div>
                <div class="ibox-content" id="table">
                    @Html.Partial("_Table", Model)
                </div>
            </div>
        </div>
    </div>
</div>
<div id="divEdit">
    @Html.Partial("_Add")
</div>
