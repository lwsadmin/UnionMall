@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";

    ViewBag.FirstMenu = "SystemSet";
    ViewBag.SecondMenu = "ManagerRole";
}
@model UnionMall.Web.Models.Roles.RoleListViewModel
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>@L("Settings")@L("Permissions")<small></small></h5>
                <div class="ibox-tools"></div>
            </div>
            <div class="ibox-content">
                <form method="get" class="form-horizontal">
                    <div class="form-group">
                        <label class="col-sm-2 control-label">@L("Roles")@L("Name")</label>
                        <div class="col-sm-3"><input type="text" class="form-control"></div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">@L("Introduce")</label>

                        <div class="col-sm-3">
                            <textarea class="form-control"></textarea>
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-sm-2 control-label">@L("Permissions")</label>

                        <div class="col-sm-10">
                            @foreach (var permission in Model.Permissions)
                            {
                                <label class="checkbox-inline">
                                    <input type="checkbox" value="@permission.Name" /> @permission.DisplayName
                                </label>
                            }
                        </div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group">
                        <div class="col-sm-4 col-sm-offset-2">

                            <button class="btn btn-primary" type="submit">@L("Save")</button>
                            <button class="btn btn-white col-md-offset-2" type="button" onclick="javascript: history.back(-1);">@L("Cancel")</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
